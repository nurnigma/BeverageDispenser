@using BeverageDispenser.Models
@using Microsoft.EntityFrameworkCore;


@model Beverage;

<h2>Изменения названия напитка</h2>

<form asp-action="EditDrink" asp-route-id="@Model.Id" method="post">
    <div class="form-group">
        <label for="text">Название:</label>
        <input type="text" id="name" name="Name" class="form-control" value="@Model.Name" required />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
